#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# 获取项目根目录（脚本所在目录的父目录）
ROOT_DIR="$(dirname -- "$0")/.."

# 生成静态文件
npx hexo generate

# 复制 source 目录下的 txt 文件到 public 目录
echo "Copying .txt files from source to public..."
find "$ROOT_DIR/source" -name "*.txt" -type f -exec cp {} "$ROOT_DIR/public/" \;

echo "Done!"